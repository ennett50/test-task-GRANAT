.info-block
	position relative
	margin-bottom 40px
	text-align center
	&-img
		max-width 100%
	&-desc
		font-size 12px
		padding 15px
		background #fff
		overflow hidden
		background rgba(255, 255, 255, 0.9)
		border 15px solid rga(121, 155, 188)
		border 15px solid rgba(121, 155, 188, 0.5)
		position absolute
		z-index 1;
		border-box()
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		max-width: 80%;
		max-height: 40%;
		text-align left
		margin: auto;